<AnchorPane prefHeight="600.0" prefWidth="800.0" stylesheets="@styles/helpScreenStyles.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.app.screen.controller.HelpController">
